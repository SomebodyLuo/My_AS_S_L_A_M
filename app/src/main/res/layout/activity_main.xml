<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/changeTxt2Bin"
        android:layout_width="150dip"
        android:layout_height="63dp"
        android:layout_below="@+id/surfaceLinear"
        android:layout_marginLeft="1300px"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/img_dealed"
        android:clickable="false"
        android:text="changeTxt2Bin"
        android:visibility="gone" />
        <!--android:layout_alignBottom="@+id/img_dealed"-->

    <org.opencv.android.JavaCameraView
        android:id="@+id/tutorial1_activity_java_surface_view"
        android:layout_width="640px"
        android:layout_height="480px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/border"
        android:visibility="gone"
        opencv:camera_id="any"
        opencv:show_fps="true" />

    <ImageView
        android:id="@+id/img_dealed"
        android:layout_width="1280px"
        android:layout_height="960px"
        android:layout_marginLeft="0px"
        android:layout_marginTop="0px" />

    <LinearLayout
        android:id="@+id/surfaceLinear"
        android:layout_width="1280px"
        android:layout_height="960px"
        android:layout_marginLeft="1280px"
        android:layout_marginTop="0dip"
        android:background="#00FFFFFF"
        android:orientation="vertical"
        />

</RelativeLayout>